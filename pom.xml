<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starters</artifactId>
    <version>2.2.0.RELEASE</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>

  <groupId>pe.ty</groupId>
  <artifactId>ty-starters</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>ty-starters</name>
  <description>Starters</description>

  <properties>
    <java.version>1.8</java.version>
    <ty-framework.version>0.0.1-SNAPSHOT</ty-framework.version>
    <jfrog-plugin.version>2.6.1</jfrog-plugin.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>
    <dependency>
      <groupId>pe.ty</groupId>
      <artifactId>ty-core-dependencies</artifactId>
    </dependency>
  </dependencies>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>pe.ty</groupId>
        <artifactId>ty-core-dependencies</artifactId>
        <version>${ty-framework.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.jfrog.buildinfo</groupId>
        <artifactId>artifactory-maven-plugin</artifactId>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>${java.version}</source>
            <target>${java.version}</target>
          </configuration>
        </plugin>

        <!--Artifactory deploy plugin-->
        <plugin>
          <groupId>org.jfrog.buildinfo</groupId>
          <artifactId>artifactory-maven-plugin</artifactId>
          <version>${jfrog-plugin.version}</version>
          <executions>
            <execution>
              <id>build-info</id>
              <goals>
                <goal>publish</goal>
              </goals>
              <configuration>
                <publisher>
                  <contextUrl>{{ARTIFACTORY_CONTEXT_URL}}</contextUrl>
                  <username>{{ARTIFACTORY_USER}}</username>
                  <password>{{ARTIFACTORY_PASS}}</password>
                  <repoKey>{{ARTIFACTORY_REPO_SNAPSHOTS|libs-release}}</repoKey>
                  <snapshotRepoKey>{{ARTIFACTORY_REPO_SNAPSHOTS|libs-snapshot}}</snapshotRepoKey>
                </publisher>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
